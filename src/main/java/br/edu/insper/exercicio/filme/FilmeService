package br.edu.insper.exercicio.filmes;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class FilmeService {

    @Autowired
    private FilmeRepository filmeRepository;

    public List<Filme> listarFilmes() {
        return filmeRepository.findAll();
    }

    public Filme criarFilme(Filme filme) {
        Integer nota = filme.getNota();
        if (nota == null || nota < 0 || nota > 5) {
            throw new IllegalArgumentException("A nota deve estar entre 0 e 5");
        }
        if (filme.getNome() == null || filme.getNome().isBlank()) {
            throw new IllegalArgumentException("Nome é obrigatório");
        }
        if (filme.getDiretor() == null || filme.getDiretor().isBlank()) {
            throw new IllegalArgumentException("Diretor é obrigatório");
        }
        return filmeRepository.save(filme);
    }

    public void deletarFilme(Integer id) {
        if (!filmeRepository.existsById(id)) {
            throw new RuntimeException("Filme não encontrado");
        }
        filmeRepository.deleteById(id);
    }
}


